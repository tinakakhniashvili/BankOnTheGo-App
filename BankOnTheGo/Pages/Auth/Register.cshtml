@page
@model BankOnTheGo.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="register-wrapper d-flex align-items-center justify-content-center py-5">
    <div class="card register-card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="register-header bg-gradient-primary text-white text-center py-4">
            <h2 class="mb-0 fw-bold">Create Your Account</h2>
            <p class="mb-0 small opacity-75">Join us and manage your banking on the go</p>
        </div>

        <div class="card-body p-5">
            <form method="post" novalidate>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName" class="form-label fw-semibold"></label>
                        <input asp-for="Input.FirstName" class="form-control form-control-lg rounded-3" placeholder="First name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.LastName" class="form-label fw-semibold"></label>
                        <input asp-for="Input.LastName" class="form-control form-control-lg rounded-3" placeholder="Last name" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.ID_Number" class="form-label fw-semibold"></label>
                    <input asp-for="Input.ID_Number" class="form-control form-control-lg rounded-3" placeholder="ID number" />
                    <span asp-validation-for="Input.ID_Number" class="text-danger small"></span>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg rounded-3" placeholder="Email address" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-gradient-primary btn-lg fw-bold rounded-3">
                        Create Account
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer bg-light text-center py-3">
            <small class="text-muted">
                Already have an account? 
                <a href="/Auth/Login" class="fw-bold text-gradient">Login here</a>
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
