@{
    var appName = "BankOnTheGo";
}
<!doctype html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @appName</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="border-0">
        <nav class="navbar navbar-expand-lg bg-body-tertiary py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">@appName</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Privacy">Privacy</a></li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <partial name="_LoginPartial" />
                        <button id="themeToggle" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle theme">
                            <span class="d-none d-sm-inline">Theme</span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container section">
        <div class="mb-4">
            @RenderSection("PageHeader", required: false)
        </div>

        <div class="pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="border-0">
        <div class="container py-4 text-center text-muted small">
            © @(DateTime.UtcNow.Year) @appName
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
